
@{
    
}

<h2>@ViewBag.Title</h2>

<br /><br /><br />
<section class="dishes">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aligncenter"><h2 class="aligncenter">Inicio de Sesion</h2>La motivación es lo que te pone en marcha, <br /> y el hábito es lo que hace que sigas..</div>
                <br />
            </div>
        </div>

        <div class="row service-v1 margin-bottom-40">

            <div class="container" style="background-color:black;">
                <div class="row">
                    <div class="col-md-6">
                        <form method="post" action="/CreateAccount/Login">

                            <div class="input-field">
                                <input type="text" name="txtUsuario" class="form-control" id="user" required data-validation-requred-message="Ingrese su apellido materno" />
                                <label for="user">Usuario</label>
                                <p class="help-block"></p>
                            </div>
                            <div class="input-field">
                                <input type="password" name="txtPassword" class="form-control" id="password" required data-validation-requred-message="Ingrese su contraseña" />
                                <label for="password">Contraseña</label>
                                <p class="help-block"></p>
                                <div class="input-field">
                                    <input type="submit" class="btn btn-primary waves-effect waves-dark pull-right" value="Ingresar" />
                                </div>
                            </div>
                            <h2>@ViewBag.Message</h2>
                            <p>@Html.ActionLink("Registrarse como usuario nuevo", "Index")</p>
                            <p>@Html.ActionLink("Olvido su contraseña?", "Recover")</p>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <br />
                        <br />
                        <img class="img-responsive" src="~/Images/slides/fit1.jpeg" width="950" height="500" alt="">
                    </div>
                </div>
            </div>




        </div>
    </div>
</section>

